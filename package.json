{
  "name": "postec-planner",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "check-types": "turbo run check-types"
  },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "dotenv": "^16.5.0",
    "zod": "^3.25.30"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  }
}
